package br.com.lunacore.custom;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.files.FileHandle;

import br.com.lunacore.Editor;
import br.com.lunacore.lunalire.LireObject;
import br.com.lunacore.lunalire.components.SpriteComponent;

public class ObjectPresets {
	
	public static LireObject getSpritePreset(FileHandle sprite) {
		LireObject obj = Editor.getInstance().getUIState().getStage().loadObject(Gdx.files.internal("presets/sprite.lo"), 0, 0);
		((SpriteComponent) obj.getComponent(SpriteComponent.class)).setSprite(sprite);
		return obj;
	}
	
	public static LireObject getParticlePreset(FileHandle sprite) {
		
		return null;
	}
	

}
