package br.com.lunacore.lunalire;

import java.util.HashMap;

import com.badlogic.gdx.assets.AssetManager;
import com.badlogic.gdx.graphics.g2d.SpriteBatch;

public class LunaLireStarter {

	//Puxar todos os arquivos da pasta SRC e tacar pra carregar no AssetManager
	
	static SpriteBatch batch;
	static LireStateManager manager;
	static boolean drawFPS = false;
	AssetManager manager.
		
	public static void init() {
		batch = new SpriteBatch();
		manager = new LireStateManager();
		//Carrega as cenas a partir do arquivo .ll

	}
	
	public static void render() {
		manager.render(batch);
		manager.update();
	}
	
	public static void dispose() {
		manager.dispose();
	}
	
}
