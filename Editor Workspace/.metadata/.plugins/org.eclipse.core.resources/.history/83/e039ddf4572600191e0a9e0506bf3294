package br.com.lunacore.custom;

import java.io.IOException;
import java.io.OutputStream;
import java.io.PrintStream;

import com.kotcrab.vis.ui.widget.VisTextArea;

public class ConsoleOutputStream extends PrintStream{

	PrintStream sys;
	VisTextArea area;
	
	public ConsoleOutputStream(PrintStream sys, VisTextArea area) {
		super(sys);
		this.sys = sys;
		this.area = area;
		area.setMaxLength(100);
	}
	
	@Override
	public void print(String s) {
		super.print(s);

		if((area.getText() + s).length() > area.getMaxLength()) {
			area.setText(area.getText().substring(s.length()));
		}
		area.setText(area.getText() + s);
		area.setCursorAtTextEnd();
	}
	
	@Override
	public void println(String x) {
		//super.println(x);
		
		if((area.getText() + x).length() > area.getMaxLength()) {
			area.setText(area.getText().substring(x.length()));
		}
		area.setText(area.getText() + x + "\n");
		area.setCursorAtTextEnd();
	}
	
//	public void write(int b) throws IOException {
//		sys.write(b);
//		
//		
//		if((area.getText() + String.valueOf((char)b)).length() > area.getMaxLength()) {
//			area.setText(area.getText().substring(area.getText().length()/2));
//		}
//		
//		area.appendText(String.valueOf((char)b));
//		area.setCursorAtTextEnd();
//	}

}
